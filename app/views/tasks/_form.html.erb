<%= simple_form_for(@task, html: {class: "form-signin"}) do |f| %>
  <%= f.error_notification %>

    <%= f.input :content, label: false, placeholder: "Content", input_html: {class: "form-control"}, autofocus: true, required: true %>

    <%= f.button :submit, class: "btn btn-primary btn-lg btn-block" %>

<% end %>
